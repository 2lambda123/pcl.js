{
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release ${version}"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  },
  "hooks": {
    "before:init": ["npm run test"],
    "before:npm:release": ["npm run build"]
  }
}
